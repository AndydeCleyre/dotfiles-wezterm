scheme:
  bases:
    - Doom Peacock
    - kanagawabones
    - One Dark (Gogh)
    - Popping and Locking
    - Red Planet
  overrides:
    background: #16161d
    ansi[8]: #dea050
    brights[8]: #ffa52f
    cursor_bg: #ff8bf0
  opacity: 0.95
  fps: 30
  cursor: BlinkingBar
fonts:
  size: 18
  families:
    # italic: 0xProto
    main:
      - Andysevka Term
      - Iosevka Term Custom
      - Iosevka Term Custom SmEx
      - Iosevka Term Custom Extended
      - 0xProto
      - Maple Mono
      # - Sudo
      # Sudo currently has bad spacing with nerd font symbols and other weird issues
      - Fantasque Sans Mono
      - Ubuntu Mono
      - Comic Mono
      - Share Tech Mono
      - Atkinson Hyperlegible Mono
      - Symbols Nerd Font Mono
      - Symbols Nerd Font
      - NanumGothicCoding
      - Fluent Emoji Color
      - Fluent Emoji Flat
      - Twemoji
      - Twitter Color Emoji
      - SerenityOS Emoji
      - OpenMoji Color
      - JoyPixels
  features:
    [clig, frac, kern, liga, thnd, txtr]
keys:
  -
    {action: IncreaseFontSize, mods: CTRL, key: =}
  -
    {action: DecreaseFontSize, mods: CTRL, key: -}
  -
    {action: ResetFontSize, mods: CTRL, key: 0}
  -
    {action: PasteFrom "Clipboard", mods: SHIFT|CTRL, key: v}
misc:
  canonicalize_pasted_newlines: LineFeed
  check_for_updates: false
  custom_block_glyphs: false
  disable_default_key_bindings: true
  enable_kitty_graphics: true
  enable_tab_bar: false
