scheme:
  bases:
    - Doom Peacock
    - kanagawabones
    - One Dark (Gogh)
    - Popping and Locking
    - Red Planet
  overrides:
    background: #16161d
    ansi[8]: #dea050
    brights[8]: #ffa52f
    cursor_bg: #ff8bf0
  opacity: 0.95
  fps: 30
  cursor: BlinkingBar
fonts:
  size: 18
  families:
    # italic: 0xProto
    # italic: 0xProto Nerd Font
    main:
      - Andysevka Term
      - Andysevka Term Semi-Extended
      - Andysevka Term Extended
      - 0xProto

      # - 0xProto Nerd Font
      # 0xProto Nerd Font has annoyingly sized nerd symbols
      # when used as a fallback for other fonts

      - Maple Mono
      - Sudo
      - Fantasque Sans Mono
      - Ubuntu Mono
      - Comic Mono
      - Share Tech Mono
      - Atkinson Hyperlegible Mono
      - Symbols Nerd Font Mono
      - Symbols Nerd Font
      - NanumGothicCoding
      - Fluent Emoji Color
      - Fluent Emoji Flat
      - Twemoji
      - Twitter Color Emoji
      - SerenityOS Emoji
      - OpenMoji Color
      - JoyPixels
  features:
    # Some fonts don't play well with frac (Sudo, Maple Mono)
    # [clig, kern, liga, thnd, txtr]
    [clig, frac, kern, liga, thnd, txtr]
keys:
  -
    {action: IncreaseFontSize, mods: CTRL, key: =}
  -
    {action: DecreaseFontSize, mods: CTRL, key: -}
  -
    {action: ResetFontSize, mods: CTRL, key: 0}
  -
    {action: PasteFrom "Clipboard", mods: SHIFT|CTRL, key: v}
misc:
  canonicalize_pasted_newlines: LineFeed
  check_for_updates: false
  custom_block_glyphs: false
  disable_default_key_bindings: true
  enable_kitty_graphics: true
  enable_tab_bar: false
